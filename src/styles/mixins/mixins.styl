//- Mixins
//- --------------------------------------------------------

media($condition = 'screen', $length = 0)
  if $condition == 'mobile'
    @media (max-width: 640px)
      {block}
  else if $condition == 'min'
    @media (min-width: $length)
      {block}
  else if $condition == 'max'
    @media (max-width: $length)
      {block}
  else if $condition == 'print'
    @media (print)
      {block}
  else
    @media $condition
      {block}


